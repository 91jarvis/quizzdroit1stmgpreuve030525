  <script>
    function corrigerQuizz() {
      const reponses = {
        q1: "b", q2: "b", q3: "a", q4: "a", q5: "b", q6: "b", q7: "b", q8: "c",
        q9: "b", q10: "a", q11: "b", q12: "b"
      };
      let score = 0;
      for (let q in reponses) {
        const choix = document.querySelector(`input[name="${q}"]:checked`);
        if (choix && choix.value === reponses[q]) {
          score++;
        }
      }
      const nom = document.getElementById("student").value.trim();
      const total = Object.keys(reponses).length;
      let commentaire = "";
      if (score === total) {
        commentaire = "Excellente maîtrise du thème de la preuve en droit. Félicitations ! — M. Salha";
      } else if (score >= 9) {
        commentaire = "Très bon niveau. Quelques imprécisions à revoir. — M. Salha";
      } else if (score >= 6) {
        commentaire = "Bonne base mais des points importants sont encore à travailler. — M. Salha";
      } else {
        commentaire = "Notions fragiles. Une reprise des cours et exercices est fortement recommandée. — M. Salha";
      }
      const result = document.getElementById("result");
      result.innerHTML = `<p><strong>${nom ? nom : "Élève"}</strong> – Score : ${score} / ${total}</p><p>${commentaire}</p>`;
    }
  </script>
